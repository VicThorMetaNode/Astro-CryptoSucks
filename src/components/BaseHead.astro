---
interface Props {
	title: string
	description: string
	keywords: string
}

const { title, description, keywords } = Astro.props
---

<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>
<link rel="icon" type="image/svg" href="/edition.svg" />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<!-- Optional: Meta keywords (separated by commas) -->
<meta name="author" content="BlockchainSucks" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Montserrat+Subrayada:wght@400;700&family=Righteous&family=Sunflower:wght@300;500;700&family=Teko:wght@300;400;500;600;700&family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap"
	rel="stylesheet"
/>
<script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
